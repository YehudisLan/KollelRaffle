@using KollelRaffleWeb.Models;
@model IndexViewer


@if(Model.Total != 0)
{

    <h3 class="alert"  role="alert"  style="background-color:blue;color:white;border:solid;color:lightblue;  text-align:center;">Your'e order of $@Model.Total has been processed! To enter again please resubmit the form.</h3>

}
<div class="container" style="margin-top:20px">

    <form action="/home/AddInfo" method="post">
        <div class="row">
            <div class="col-md-3">
                <label style="color:blue;">Name</label>
                <input type="text" name="Name" class="form-control" required="" style="border-radius:2px" />
            </div>

            <div class="col-md-offset-4">
                <label style="color:blue;">Phone Number</label>
                <input type="text" name="Number" class="form-control" required="" style="border-radius:2px" />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-3">
                <label style="color:blue;">Address</label>
                <input type="text" name="StreetAddress" class="form-control" required="" style="border-radius:2px" />
            </div>

            <div class="col-md-offset-4">
                <label style="color:blue;">City, State, Zip</label>
                <input type="text" name="CityState" class="form-control" required="" style="border-radius:2px" />
            </div>

            <br />

            <div class="col-md-10">
                <label style="color:blue;">Message (optional):  </label>
                <textarea  name="InHonorOf" class="form-control" required="" style="border-radius:2px;width:400px !important; height:75px !important;" >  </textarea>
            </div>

          
        </div>

        <input type="hidden" name="Total" class="form-total" />
        <input type="hidden" name="Date" value="@DateTime.Now" />


        <div id="select-tickets">
            <h3 style="color:blue;">Select number of tickets:</h3>
            <input type="text" style="width:32px; height:30px; border-radius:2px" id="eighteen" class="num-tickets" name="sheitel" /> <span style="font-size:18px">$18- Sheitel Ticket</span>
            <br />
            <input type="text" style="width:32px; height:30px; border-radius:2px" id="thirty-six" class="num-tickets" name="cash" /> <span style="font-size:18px">$36- Cash Prize Ticket</span>
            <br />
            <input type="text" style="width:32px; height:30px; border-radius:2px" id="sheitel-hundred" class="num-tickets" name="SheitelBulk" /> <span style="font-size:18px">$100- 6 Sheitel Tickets</span>
            <br />
            <input type="text" style="width:32px; height:30px; border-radius:2px" id="cash-hundred" class="num-tickets" name="CashBulk" /> <span style="font-size:18px">$100- 3 Cash Prize Tickets</span>
            <br /><br />

            <h4 style="border-bottom:solid;border-bottom-width:4px;border-top:solid;border-top-width:2px;font-size:25px; width:200px">Your total: $<span id="btn-submit" style="color:blue;"></span></h4>
        </div>
        <br />
        <div class="row">
            <h3 style="color:blue;">Choose your method of payment:</h3>
            <div class="col-md-1">
                
                <select name="Payment" class="form-control" style="width:158px; border-radius:2px">
                    <option value="-1">--Payment Type--</option>
                    <option value="0">Check</option>
                    <option value="1">Credit</option>
                </select>
            </div>
            <div class="col-sm-offset-4" style="position:absolute;top:91%;left:13%">
                <button class="btn submit-btn" id="submit-form" style="border-radius:2px;width:120px;height:45px;background-color:blue;color:white"><span style="font-size:large">Submit</span></button>
            </div>
        </div>
        <h6>Tax deductible checks can be made payable and sent to: </h6><h6>Cong. Kollel Lomdei Shas</h6><h6>6 Demarest Road</h6> <h6>Spring Valley, NY 10977</h6>
        <br />

    </form>
</div>

@section scripts{
    <script src="~/Scripts/TotalCalculation.js"></script>
    <script src="~/Scripts/text-color.js"></script>"}